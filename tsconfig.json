{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": false,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"outDir": "./dist",
		"noEmitOnError": false,
		"noImplicitUseStrict": true,
		"types": [
			"node",
			"jasmine"
		],
		"lib": [
			"es2015"
		]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts"
	]
}